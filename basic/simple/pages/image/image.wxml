
<view class="image-container">
  <view class='image-wrapper' bindtap='moveNext'  style="margin-left:{{currentPos * -100 + '%'}}"  >
    <image class='image-item' src="/images/1.png"  mode="widthFix"></image>
    <image class='image-item' src="/images/2.png"  mode="widthFix"></image>
  </view>
  <view class='image-action'>
      <view  bindtap='moveto' data-num="0" class= 'action-button {{currentPos==0?"active":""}}'></view>
      <view  bindtap='moveto' data-num="1" class= 'action-button {{currentPos==1?"active":""}}'></view>
    </view>
</view>

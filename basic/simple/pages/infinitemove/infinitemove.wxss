page {
  height:100%;
}

.image-container {
  height:100%;
  overflow-x: hidden;
}

.image-wrapper {
  width:100%;
  height:100%;
  display:flex;
  flex-direction: row;
 
  position:relative;
}

.image-item {
  width:100%;
  position:absolute;
  top:0;
  transition: all 0.3s ease;
}

.image-action {
  display:flex;
  position:absolute;
  bottom:10rpx;
  right:20rpx;
  /* height:60rpm;
  width:100%; */
  z-index:50;
}
.image-action .action-button {
  width: 30rpx;
  height:30rpx;
  border-radius: 50%;
  background-color:#ccc;
}
.image-action .action-button.active { 
  background-color: red;
}
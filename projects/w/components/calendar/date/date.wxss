/* components/calendar/date/date.wxss */

.wrapper {
  width:100%;
  display:flex;
  justify-content:center;
  align-items:center;
  border-bottom: 1px solid rgba(0,0,0,0.1);
  border-right: 1px solid rgba(0,0,0,0.1);
  position:relative;
}

.day-title {
  font-size:13px;
}

.day-num {
  position:absolute;
  display:flex;
  justify-content:center;
  align-items:center;
  top:5px;
  right:5px;
  color: steelblue;
  font-size:10px;
  font-weight: bold;
}

.out {
  color: rgba(0,0,0, 0.2);
}